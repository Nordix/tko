#!/bin/bash
set -e

HERE=$(dirname "$(readlink --canonicalize "$BASH_SOURCE")")
. "$HERE/_env"
. "$HERE/_trap"

if [ "$1" == -c ]; then
	m 'deleting cluster...'
	kind delete cluster --name=tko || true
fi

m 'creating cluster...'

kind create cluster --config="$ROOT/assets/kubernetes/kind/tko.yaml" || true

m 'deploying TKO...'

"$HERE/kubectl-kind" apply -f "$ROOT/assets/kubernetes/admin/"
"$HERE/kubectl-kind" apply -f "$ROOT/assets/kubernetes/workloads/"

m 'waiting for TKO...'

"$HERE/kubectl-kind" wait --for=condition=available --timeout=60s --namespace=tko deployment/tko-api

m 'creating deployment...'

"$HERE/tko-kind" template register demo/hello-world:v1.0.0 --metadata=type=demo --url="$ROOT/examples/hello-world/" -v
"$HERE/tko-kind" site register lab/1 --metadata=type=lab --url="$ROOT/examples/lab-site/" -v
"$HERE/tko-kind" deployment create demo/hello-world:v1.0.0 --site=lab/1 -v
